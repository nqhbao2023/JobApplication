if (Vai trò là gì?) then (Ứng viên)
  :Vào Trang chủ Tìm việc;
elseif (Nhà tuyển dụng)
  :Vào Dashboard Tuyển dụng;
elseif (Admin)
  :Vào Dashboard Admin;
else
  :Vào Trang chủ;
