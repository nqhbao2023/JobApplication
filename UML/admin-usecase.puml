@startuml Admin Use Case Diagram
!theme plain
skinparam backgroundColor #FEFEFE
skinparam actorStyle awesome
skinparam usecase {
  BackgroundColor #E8F4FD
  BorderColor #2196F3
  ArrowColor #666666
}
skinparam actor {
  BackgroundColor #4CAF50
  BorderColor #388E3C
}

title Sơ đồ Use Case - Admin\n(Hệ thống tìm việc làm Job4S)

left to right direction

actor "Admin" as admin #4CAF50

' ==================== QUẢN LÝ HỆ THỐNG ====================
rectangle "Quản lý Hệ thống" as SystemManagement {
  usecase "Đăng nhập" as UC_Login
  usecase "Đăng xuất" as UC_Logout
  usecase "Xem Dashboard" as UC_Dashboard
  usecase "Xem thống kê" as UC_Analytics
}

' ==================== QUẢN LÝ NGƯỜI DÙNG ====================
rectangle "Quản lý Người dùng" as UserManagement {
  usecase "Xem danh sách Users" as UC_ViewUsers
  usecase "Tìm kiếm User" as UC_SearchUsers
  usecase "Lọc User theo Role" as UC_FilterUsers
  usecase "Tạo User mới" as UC_CreateUser
  usecase "Chỉnh sửa User" as UC_EditUser
  usecase "Xóa User" as UC_DeleteUser
  usecase "Gán quyền Admin" as UC_AssignAdmin
}

' ==================== QUẢN LÝ VIỆC LÀM ====================
rectangle "Quản lý Việc làm" as JobManagement {
  usecase "Xem danh sách Jobs" as UC_ViewJobs
  usecase "Tìm kiếm Job" as UC_SearchJobs
  usecase "Lọc Job theo trạng thái" as UC_FilterJobs
  usecase "Tạo Job mới" as UC_CreateJob
  usecase "Chỉnh sửa Job" as UC_EditJob
  usecase "Xóa Job" as UC_DeleteJob
  usecase "Duyệt Job" as UC_ApproveJob
  usecase "Từ chối Job" as UC_RejectJob
}

' ==================== QUẢN LÝ QUICK POSTS ====================
rectangle "Quản lý Quick Posts" as QuickPostManagement {
  usecase "Xem Quick Posts chờ duyệt" as UC_ViewPendingPosts
  usecase "Duyệt Quick Post" as UC_ApproveQuickPost
  usecase "Từ chối Quick Post" as UC_RejectQuickPost
  usecase "Xem Spam Score" as UC_ViewSpamScore
  usecase "Nhập lý do từ chối" as UC_InputRejectReason
}

' ==================== QUẢN LÝ CÔNG TY ====================
rectangle "Quản lý Công ty" as CompanyManagement {
  usecase "Xem danh sách Companies" as UC_ViewCompanies
  usecase "Xóa Company" as UC_DeleteCompany
}

' ==================== QUẢN LÝ DANH MỤC ====================
rectangle "Quản lý Danh mục" as CategoryManagement {
  usecase "Xem Job Categories" as UC_ViewCategories
  usecase "Thêm Category mới" as UC_CreateCategory
  usecase "Chỉnh sửa Category" as UC_EditCategory
  usecase "Xóa Category" as UC_DeleteCategory
  usecase "Chọn Icon cho Category" as UC_SelectIcon
  usecase "Chọn màu cho Category" as UC_SelectColor
}

' ==================== QUẢN LÝ LOẠI VIỆC LÀM ====================
rectangle "Quản lý Loại việc làm" as JobTypeManagement {
  usecase "Xem Job Types" as UC_ViewJobTypes
  usecase "Thêm Job Type mới" as UC_CreateJobType
  usecase "Chỉnh sửa Job Type" as UC_EditJobType
  usecase "Xóa Job Type" as UC_DeleteJobType
}

' ==================== CONNECTIONS ====================
' System Management
admin --> UC_Login
admin --> UC_Logout
admin --> UC_Dashboard
admin --> UC_Analytics

' User Management
admin --> UC_ViewUsers
admin --> UC_CreateUser
admin --> UC_EditUser
admin --> UC_DeleteUser

UC_ViewUsers ..> UC_SearchUsers : <<include>>
UC_ViewUsers ..> UC_FilterUsers : <<include>>
UC_EditUser ..> UC_AssignAdmin : <<extend>>

' Job Management
admin --> UC_ViewJobs
admin --> UC_CreateJob
admin --> UC_EditJob
admin --> UC_DeleteJob
admin --> UC_ApproveJob
admin --> UC_RejectJob

UC_ViewJobs ..> UC_SearchJobs : <<include>>
UC_ViewJobs ..> UC_FilterJobs : <<include>>

' Quick Post Management
admin --> UC_ViewPendingPosts
admin --> UC_ApproveQuickPost
admin --> UC_RejectQuickPost

UC_ViewPendingPosts ..> UC_ViewSpamScore : <<include>>
UC_RejectQuickPost ..> UC_InputRejectReason : <<extend>>

' Company Management
admin --> UC_ViewCompanies
admin --> UC_DeleteCompany

' Category Management
admin --> UC_ViewCategories
admin --> UC_CreateCategory
admin --> UC_EditCategory
admin --> UC_DeleteCategory

UC_CreateCategory ..> UC_SelectIcon : <<include>>
UC_CreateCategory ..> UC_SelectColor : <<include>>
UC_EditCategory ..> UC_SelectIcon : <<include>>
UC_EditCategory ..> UC_SelectColor : <<include>>

' Job Type Management
admin --> UC_ViewJobTypes
admin --> UC_CreateJobType
admin --> UC_EditJobType
admin --> UC_DeleteJobType

@enduml
