{
  "name": "job4s-server",
  "version": "1.0.0",
  "description": "Job4S Backend API - Node.js + Express + Firebase + AI",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "lint": "eslint src --ext .ts",
    "seed:job-types": "ts-node src/scripts/seed-job-types.ts",
    "seed:companies": "ts-node src/scripts/seed-companies.ts",
    "sync:algolia:jobs": "ts-node src/scripts/sync-jobs-to-algolia.ts",
    "sync:algolia:all": "npm run seed:job-types && npm run sync:algolia:jobs",
    "seed:all": "npm run seed:job-types && npm run seed:companies",
    "crawl:viecoi-sitemap": "ts-node src/crawlers/viecoi/sitemap-crawler.ts",
    "crawl:viecoi-urls": "ts-node src/crawlers/viecoi/fetch-job-urls.ts",
    "crawl:viecoi-jobs": "ts-node src/crawlers/viecoi/job-crawler.ts",
    "crawl:viecoi-puppeteer": "ts-node src/crawlers/viecoi/puppeteer-crawler.ts",
    "crawl:viecoi-pipeline": "ts-node src/crawlers/viecoi/puppeteer-full-pipeline.ts",
    "normalize:viecoi": "ts-node src/crawlers/viecoi/normalize-runner.ts",
    "upsert:viecoi-jobs": "ts-node src/crawlers/viecoi/upsert-jobs.ts",
    "sync:viecoi-algolia": "ts-node src/crawlers/viecoi/sync-algolia.ts",
    "crawl:viecoi-full": "npm run crawl:viecoi-puppeteer -- --limit 50 && npm run crawl:viecoi-pipeline"
  },
  "keywords": [
    "job",
    "api",
    "firebase",
    "ai",
    "express"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/nodemailer": "^7.0.4",
    "algoliasearch": "^5.43.0",
    "axios": "^1.6.2",
    "cheerio": "^1.0.0-rc.12",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.5.1",
    "firebase-admin": "^12.0.0",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "morgan": "^1.10.0",
    "multer": "^2.0.2",
    "nodemailer": "^7.0.10",
    "puppeteer": "^21.6.1",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^2.0.0",
    "@types/node": "^20.10.5",
    "@types/xml2js": "^0.4.14",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "nodemon": "^3.0.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
