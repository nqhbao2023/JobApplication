{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",                // ✅ baseUrl là gốc dự án (nơi chứa folder "src")
    "paths": {
      "@/*": ["src/*"]             // ✅ alias @ trỏ về "src/*"
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "src/types/**/*.d.ts",
    "expo-env.d.ts"
  ]
}
